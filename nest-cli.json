{
  "collection": "@nestjs/schematics",
  "compilerOptions": {
    "assets": [
      "**/*.pug"
    ],
    "watchAssets": true,
    "webpack": true
  },
  "monorepo": true,
  "projects": {
    "base": {
      "type": "application",
      "root": "apps/base",
      "entryFile": "main",
      "sourceRoot": "apps/base/src",
      "compilerOptions": {
        "tsConfigPath": "apps/base/tsconfig.app.json"
      }
    },
    "shared": {
      "type": "library",
      "root": "libs/shared",
      "entryFile": "index",
      "sourceRoot": "libs/shared/src",
      "compilerOptions": {
        "tsConfigPath": "libs/shared/tsconfig.lib.json"
      }
    }
  }
}
